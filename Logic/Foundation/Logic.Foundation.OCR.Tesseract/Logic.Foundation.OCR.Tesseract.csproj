<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net10.0</TargetFrameworks>
    <RootNamespace>Fateblade.Components.Logic.Foundation.OCR.Tesseract</RootNamespace>
    <AssemblyName>Components.Logic.Foundation.OCR.Tesseract</AssemblyName>

    <!-- NuGet Package Metadata -->
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
    <PackageId>Fateblade.Components.Logic.Foundation.OCR.Tesseract</PackageId>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Fateblade</Authors>
    <Company>Fateblade</Company>
    <Product>Fateblade Components</Product>
    <Description>Tesseract OCR implementation</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

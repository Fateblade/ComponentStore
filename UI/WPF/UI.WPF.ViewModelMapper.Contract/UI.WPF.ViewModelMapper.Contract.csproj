    <UseWPF>true</UseWPF>
    <AssemblyName>Components.UI.WPF.ViewModelMapper.Contract</AssemblyName>
    <RootNamespace>Fateblade.Components.UI.WPF.ViewModelMapper.Contract</RootNamespace>

    <!-- NuGet Package Metadata -->
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
    <PackageId>Fateblade.Components.UI.WPF.ViewModelMapper.Contract</PackageId>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Fateblade</Authors>
    <Company>Fateblade</Company>
    <Product>Fateblade Components</Product>
    <Description>WPF ViewModel to DataTemplate mapping contract interfaces</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fateblade.CoCo.Core.Contract" Version="1.0.0" />
  </ItemGroup>

</Project>
